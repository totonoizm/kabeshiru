<div class="row">
    <div class="col-sm-12">
        <div class="card" style="background: rgba(255,255,255,0.9)">    
            <div class="row justify-content-center">
                <div><%= form_with(model: @contact, local: true) do |f| %>
                    <div><%= f.label :email, "メールアドレス" %>
                          <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
                    </div>
                    <div><%= f.label :content, "問い合わせ内容" %>
                          <%= f.text_area :content, class: "form-control" %>
                    </div>
                    <div class="row justify-content-center">
                        <%= f.submit "送信", class:"btn btn-raised btn-primary" %>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>