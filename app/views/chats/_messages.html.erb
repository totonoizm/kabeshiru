<div class="jumbotron" >
  <div class="card">
    <div class="message">
      <% chats.each do |chat| %>
        <% if chat.user_id == current_user.id %>
          <p style="background-color:red; text-align: right;"><%= chat.message %></p>
        <% else %>
          <p style="text-align: left;"><%= chat.message %></p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>