<%= render 'users/info', user: @user %>
<div>
  <div class="row">
    <div class="col-sm-5">
        <%= render 'users/clip_gyms', user: @user, clip_gyms: @clip_gyms %>
    </div>
    <div class="col-sm-7">
      <div class="card" style="background-color:#EBD9B9">
        <div class="card-body">
          <h4 class="card-title"><%= @user.name %>さんのフォロワー</h4>
          <% @user.follower_user.where.not(id: current_user.id).each do |user| %>
          <div class="card">
            <div class="card-body">
              <div class="card-title">
                <%= link_to (user) do %>
                  <%= attachment_image_tag user, :profile_image, size:'50x50', format: 'jpeg', class: "rounded-circle", fallback: "default_user.jpg" %>
                <a><%= user.name %><a>
                <% end %>
              </div>
              <div class="card-text"><%= user.introduction %></div>
              <% if current_user.following?(user) %>
                <%= link_to unfollow_path(user.id), method: :POST, class: "btn btn-danger" do %>
                <i class="fa fa-user-circle"></i>
                <span>フォロー解除</span>
                <% end %>
              <% else %>
                <%= link_to follow_path(user.id), method: :POST, class: "btn btn-primary" do %>
                <i class="fa fa-user-circle"></i>
                <span>フォローする</span>
                <% end %>
              <% end %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>