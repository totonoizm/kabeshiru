<div class="card" style="background: rgba(255,255,255,0.9)">
    <div class="card-body">
        <h4 class="card-title"><%= user.name %>さんの登りたいジム</h4>
        <% if clip_gyms.exists? %>
            <% clip_gyms.reverse_each do |gym| %>
                <div class="card">
                    <div class="card-body">
                        <div>
                            <a><%= link_to attachment_image_tag(gym, :gym_image, size:"70x70", fallback: "gym_default.jpg"),gym_path(gym.id) %></a>
                            <span id="clips_btns_<%= gym.id %>"> 
                            <%= render partial: 'clips/clip', locals: {gym: gym} %>
                            </span>
                            <div class="card-title"><%= gym.name %></div>
                        </div>
                    </div>
                </div>
            <% end %>
        <% else %>
            <div>登録なし</div>
        <% end %>
    </div>
</div>