<div>
    <%= render 'users/info', user: @user %>
</div>
<div class="row">
    <div class="col-sm-4">
        <div class="card">
            <div class="card-body">
          　     <div class="card-title">
                <h5>行きたいジム</h5>
                </div>
                <div class="card-text">
                    <table>
                        <% @clip_gyms.reverse_each do |gym| %>
                            <tr>
                                <td><%= link_to attachment_image_tag(gym, :gym_image, size:"100x100", fallback: "gym_default.jpg"),gym_path(gym.id) %></td>
                                <td><%= gym.name %></td>
                                <td id="comments_count"><%= gym.comments.count %>件のノボログ</td>
                                <td id="clips_btns_<%= gym.id %>"> 
                                <%= render partial: 'clips/clip', locals: {gym: gym} %>
                                </td>
                            </tr>
                        <% end %>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
         <div id="gym_comments">
            <%= render partial: 'comments/index', locals: {comments: @comments, gym: @gym, user: @user} %>
        </div>
        <%= paginate @comments %>
    </div>
</div>