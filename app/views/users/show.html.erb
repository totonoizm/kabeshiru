<div>
    <%= render 'users/info', user: @user %>
</div>
<div class="row">
    <div class="col-sm-5">
        <%= render 'users/clip_gyms', user: @user, clip_gyms: @clip_gyms %>
    </div>
    <div class="col-sm-7">
        <div class="card" style="background-color:#EBD9B9">
            <div class="card-body">
                <h3 class="card-title"><%= @user.name %>さんのノボログ</h3>
                 <div id="gym_comments">
                    <%= render partial: 'comments/index', locals: {comments: @comments, gym: @gym, user: @user} %>
                </div>
                <div class="row justify-content-center">
                    <%= paginate @comments %>
                </div>
            </div>
        </div>
    </div>
</div>