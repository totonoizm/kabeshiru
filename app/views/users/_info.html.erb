<div class="row">
  <div class="col-sm-12">
    <div class="jumbotron" style="background-color:#EBD9B9">
      <div class="row">
        <div class="col-sm-2 profile_image">
        <%= link_to user_path(user) do %>
          <%= attachment_image_tag user, :profile_image, size:'150x150', format: 'jpeg', class: "rounded-circle", fallback: "default_user.jpg" %>
        <% end %>
        </div>
        <div class="col-sm-8 display-4"><%= user.name %></div>
        <div class="col-sm-2">
        <% if user.id == current_user.id %>
          <%= link_to edit_user_path(user), data: {"turbolinks" => false}, class: 'btn btn-dark btn-sm' do %>
            <i class="fa fa-tools fa-sm"></i>
            <span>登録情報編集</span>
          <% end %>
        <% end %>
        </div>
      </div>
      <table>
        <tr>
          <th>プロフィール</th>
          <% if @user.introduction.nil? %>
            <td><%= user.introduction %></td>
          <% else %>
            <td><%= safe_join(user.introduction.split("\n"),tag(:br)) %></td>
          <% end %>
        </tr>
      </table>
      <div class="row">
        <%= link_to user_path(user) do %>
          <i class="fas fa-mountain" aria-hidden="true" style="color: green;">ノボログ<%= user.comments.count %></i>
        <% end %>
        <%= link_to following_user_path(user) do %>
          <i class="fa fa-user-circle" aria-hidden="true" style="color: green;">
            <span id="followed_count"><%= user.follower.count %>フォロー</span></i>
        <% end %>
        <%= link_to followers_user_path(user) do %>
          <i class="fa fa-user-circle" aria-hidden="true" style="color: green;">
            <span id="followed_count"><%= user.followed.count %>フォロワー</span></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
