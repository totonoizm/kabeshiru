<div class="row">
    <div class="col-sm-12">
        <div class="jumbotron">
                  <table>
                    <tr>                      
                    <td><%= attachment_image_tag user, :profile_image, size:'70x70', format: 'jpeg', class: "rounded-circle", fallback: "default_user.jpg" %> </td>
                    <td><%= user.name %> </td>
                    </tr>
                    <tr>
                      <td>プロフィール</td>
                      <td><%= user.introduction %> </td>
                    </tr>
                    <tr>
                      <td>ホームジム</td>
                      <td><%= user.gym_id %> </td>
                    </tr>
                    <tr>
                      <% if user.id == current_user.id %>
                          <td><%= link_to "プロフィール編集", edit_user_path(user) %></td>
                      <% end %>
                    </tr> 
                  </table>
                </div>
            </div>
        </div>
    </div>
</div>
