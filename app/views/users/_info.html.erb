<div class="jumbotron" style="background: rgba(255,255,255,0.9)">
  <div class="row">
    <div class="col-sm-2">
      <%= link_to user_path(user) do %>
        <%= attachment_image_tag user, :profile_image, size:'150x150', format: 'jpeg', class: "rounded-circle", fallback: "default_user.jpg" %>
      <% end %>
    </div>
    <div class="col-sm-8 display-4"><%= user.name %></div>
  </div>
  <div class="row">
    <div class="user_profile col-sm-2">プロフィール</div>
      <div class="user_profile_content col-sm-6">
        <% if @user.introduction.nil? %>
          <a><%= user.introduction %></a>
        <% else %>
          <a><%= safe_join(user.introduction.split("\n"),tag(:br)) %></a>
        <% end %>
      </div>
    <hr size="10">
  </div>
  <div class="row justify-content-center">
    <%= render 'relationships/follow_stats', user: @user %>
  </div>
</div>
