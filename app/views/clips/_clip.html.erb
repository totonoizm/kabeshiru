<% if user_signed_in? %>
  <% if gym.cliped_by?(current_user) %>
    <%= link_to gym_clips_path(gym), method: :delete, remote: true do %>
      <i class="fas fa-star" aria-hidden="true" style="color: orange;">ノボリタイ！<%= gym.clips.count %></i>
    <% end %>
  <% else %>
    <%= link_to gym_clips_path(gym), method: :post, remote: true do %>
      <i class="far fa-star" aria-hidden="true" style="color: grey;">ノボリタイ！<%= gym.clips.count %></i>
    <% end %>
  <% end %>
<% end %>