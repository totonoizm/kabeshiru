<div>
    <%= link_to "ジム情報編集", edit_gym_path(@gym) %>
    <%= attachment_image_tag @gym, :gym_image, size:"500x500", fallback: "gym_default.jpg" %>
    <%= @gym.name %>
    <%= @gym.introduction %>
    <%= @gym.tel %>
    <%= @gym.state %>
    <%= @gym.address %>
    <%= @gym.postcode %>
    <%= @gym.url %>
    <%= @gym.open_time %>
    <%= @gym.price %>
    <%= @gym.holiday %>
    <%= @gym.access %>
    <%= @gym.latitude %>
    <%= @gym.longitude %>
</div>
<div>
  <% if user_signed_in? %>
    <% if @gym.cliped_by?(current_user) %>
      <p><span>お気に入り解除: </span><%=link_to @gym.clips.count, gym_clips_path(@gym), method: :delete %></p>
    <% else %>  
      <p><span>お気に入り登録: </span><%=link_to @gym.clips.count, gym_clips_path(@gym), method: :post %></p>
    <% end %>
  <% end %>
</div>
    <p><span>お気に入り数: </span><%= @gym.clips.count %></p>
<div>
  <%= form_with model:[@gym,@comment] do |f| %>
    <%= f.text_area :comment, size:"90x5", placeholder: "コメントをどうぞ" %>
    <%= f.submit "コメントする", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
  <% end %>
</div>
<table>
  <td class="comments_count"><%= @gym.comments.count %>件のログ</td>
</table>
<table class="gym_comments">
  <%= render 'comments/index', gym: @gym, user: @user %>
</table>


<script type="text/javascript">
    function initMap() {

        var test ={lat: <%= @gym.latitude %>, lng: <%= @gym.longitude %>};
        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 15,
            center: test
        });
        var transitLayer = new google.maps.TransitLayer();
        transitLayer.setMap(map);

        var contentString = '住所：<%= @gym.address %>';
        var infowindow = new google.maps.InfoWindow({
            content: contentString
        });

        var marker = new google.maps.Marker({
            position:test,
            map: map,
            title: contentString
        });

        marker.addListener('click', function() {
            infowindow.open(map, marker);
        });
    }
</script>
<script async defer
        src="https://maps.googleapis.com/maps/api/js?v=AIzaSyCfuIKmDLBD6u1bE6mu0FicJbUZGOWRfDw&callback=initMap">
</script>

