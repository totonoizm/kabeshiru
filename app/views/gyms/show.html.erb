ジム詳細
<div>
    <%= link_to "ジム情報編集", edit_gym_path(@gym) %>
    <%= attachment_image_tag @gym, :gym_image, size:"500x500", fallback: "gym_default.jpg" %>
    <%= @gym.name %>
    <%= @gym.introduction %>
    <%= @gym.tel %>
    <%= @gym.state %>
    <%= @gym.address %>
    <%= @gym.postcode %>
    <%= @gym.url %>
    <%= @gym.open_time %>
    <%= @gym.price %>
    <%= @gym.holiday %>
    <%= @gym.access %>
</div>
<div>
  <%= form_with model:[@gym,@comment] do |f| %>
    <%= f.text_area :comment, size:"90x5", placeholder: "コメントをどうぞ" %>
    <%= f.submit "コメントする", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
  <% end %>
</div>
<table>
  <td class="comments_count"><%= @gym.comments.count %>件のログ</td>
</table>
<table class="gym_comments">
  <%= render 'comments/index', gym: @gym, user: @user %>
</table>

<div id='gym_map'></div>

<style>
#gym_map{
  height: 400px;
}
</style>

<script>
function initMap(){
  let gym_map = new google.maps.Map(document.getElementById('gym_map'), {
  center: {lat: -34.397, lng: 150.644},
  zoom: 8
  });
}
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDXjDO6sPjUMINgpN6JRS7ZY0CJluO9Dus&callback=initMap" async defer></script>