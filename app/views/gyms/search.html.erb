<% if params[:q]['name_or_address_or_state_or_introduction_cont'] == "" %>
    <%= "検索キーワードがありません" %>
<% elsif @search_gyms.present? %>
    <%= "「#{params[:q]['name_or_address_or_state_or_introduction_cont']}」の検索結果: #{@search_gyms.count}件" %>
<div class="card-columns">
    <% @search_gyms.each do |gym| %>
    <div class="card">
    　　<div class="card-body">
            <h5 class="card-title"><%= gym.name %></h5>
            <p class="card-state"><%= gym.state %><%= gym.address %></p>
            <div class="card-image">
                <%= link_to attachment_image_tag(gym, :gym_image, size:"300x250", fallback: "gym_default.jpg"),gym_path(gym.id) %>
            </div>
            <p class="card-text">施設利用料金：<%= gym.price %></p>
            <p class="card-text">定休日：<%= gym.holiday %></p>
            <p class="card-text">営業時間：<%= gym.open_time %></p>
    　　</div>
    </div>
    <% end %>
    <%= paginate @search_gyms %>
<% else %>
    <%= "検索に一致するジムはありませんでした" %>
<% end %>
