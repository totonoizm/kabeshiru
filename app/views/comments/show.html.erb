コメント詳細
<div>
    <% if @user.id == current_user.id %>
        <%= link_to "編集", edit_comment_path(@comment) %>
    <% end %>
    <%= attachment_image_tag @comment.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "rounded-circle", fallback: "default_user.jpg" %>
    <%= @comment.user.name %>
    <%= @comment.user.gym_id %>
    <%= @comment.user.introduction %>
</div>     
<table>
        <tr>
            <td><%= link_to(comment.gym) do %>
            <%= attachment_image_tag comment.gym, :gym_image, size:'50x50', format: 'jpeg', class: "rounded-circle", fallback: "gym_default.jpg" %>
            <% end %>
            </td>
            <td><%= @comment.gym.name %></td>
            <td><%= @comment.users_comment_count %>回目の来店</td>
            <td><%= @comment.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= @comment.comment %></td>
        </tr>
    <% end %>
</table>
