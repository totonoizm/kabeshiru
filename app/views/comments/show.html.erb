<%= render 'users/info', user: @user %>

  <div class="col-sm-12">    
    <div class="jumbotron">
    <% if @user.id == current_user.id %>
        <%= link_to "編集", edit_comment_path(@comment) %>
    <% end %>
      <%= link_to (@comment.gym) do %>
      <a><%= @comment.gym.name %><a>
      <% end %>
      <a><%= @comment.comment_seq %>回目の訪問</a><!--コメントモデルでメソッドを定義-->
      <a><%= @comment.created_at.strftime('%Y/%m/%d') %></a>
      <div class=""><%= attachment_image_tag @comment, :comment_image, :fill, 100, 100, format: 'jpeg' %></div>
      <div class=""><%= simple_format(@comment.comment) %></div>
    </div>
  </div>
</div>
